<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/aim"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="Aim the phone's scanner at the book's ISBN"
        android:textSize="25dp"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/detect"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:text="The app detects the ISBN and locates your book"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_horizontal" />


    <ImageView
        android:id="@+id/book"
        android:layout_width="0591dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/isbnbook" />

    <ImageView
        android:id="@+id/popup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="110dp"
        android:src="@drawable/ic_pop_up"
        android:padding="45dp"
        app:layout_constraintBottom_toBottomOf="@+id/cellIcon"
        app:layout_constraintEnd_toEndOf="@id/cellIcon"
        app:layout_constraintHorizontal_bias="0.44"
        app:layout_constraintStart_toStartOf="@id/cellIcon"
        app:layout_constraintTop_toBottomOf="@+id/isdnscan" />

    <ImageView
        android:id="@+id/isdnscan"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/ic_scanning"
        android:paddingHorizontal="75dp"
        android:paddingVertical="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/isbndet"
        app:layout_constraintEnd_toEndOf="@+id/isbndet"
        app:layout_constraintStart_toStartOf="@+id/isbndet"
        android:padding="15dp"
        app:layout_constraintTop_toTopOf="@+id/isbndet" />

    <ImageView
        android:id="@+id/cellIcon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.438"
        app:srcCompat="@drawable/cellicon" />

    <TextView
        android:id="@+id/isbn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ISBN1234567"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/isbndet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ISBN1234567"
        android:textColor="#4CAF50"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>